<!DOCTYPE html>
<html>
  <head>
    <title>Wiki - API Document</title>
    <link rel="shortcut icon" href="<%= asset_path("rails.png") %>" />
    <%= stylesheet_link_tag "application" %>
    <%= yield :styles %>
    <%= javascript_include_tag "application" %>
    <%= yield :scripts %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div class="topbar" data-dropdown="dropdown">
      <div class="topbar-inner">
        <div class="container">
          <%= link_to '后台管理', admin_root_path, :class => 'brand' %>
          <ul class="nav">
            <li<%= " class='active'" if params[:controller] == "admin/projects" %>><%= link_to '项目', admin_projects_path %></li>
            <li<%= " class='active'" if params[:controller] == "admin/users" %>><%= link_to '用户', admin_users_path %></li>
          </ul>
          <ul class="nav secondary-nav" id="userbar">
            <li>
            <a href="#" class="dropdown-toggle"><%= current_user.name %></a>
            <ul class="dropdown-menu">
              <li><a href="<%= root_path %>">回到前台</a></li>
            </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :class => "container alert-message #{name == :notice ? "success" : "error"}" %>
      <% end %>
    </div>
    <div class="container">
      <div id="main" class="box">
        <%= yield %>
      </div>
    </div>
    <footer class="footer">
    </footer>
  </body>
</html>
