.box
  %p
    User: #{@user.name}
  %p
    Email: #{@user.email if @user.email}
  %p
    Role: #{@user.role}

- content_for :styles do
  = stylesheet_link_tag "topics"

.box
  %h3 操作记录
  .topics
    - @logs.each do |log|
      .topic.topic_line
        .pull-left.avatar= image_tag(log.author.gravatar_url)
        .right_info
          .infos
            .title #{log.author.name} #{log.desc}: #{link_to log.doc.name, project_doc_path(log.doc.project, log.doc)}
            .info.time= log.created_at.to_s(:db)
