<%= form_for([:admin,@project]) do |f| %>
  <fieldset>
    <legend><%= @title %></legend>
    <%= render 'shared/error_messages', :target => @project %>
    <div class="clearfix">
      <%= f.label :name %>
      <div class="input">
      <%= f.text_field :name %></div>
    </div>
    <div class="clearfix">
      <%= f.label :cname %>
      <div class="input">
      <%= f.text_field :cname %></div>
    </div>
    <div class="clearfix">
      <%= f.label :version %>
      <div class="input">
      <%= f.text_field :version %></div>
    </div>
    <div class="clearfix">
      <%= f.label :desc %>
      <div class="input">
      <%= f.text_field :desc, :class => "xxlarge", :style => "height:80px;" %></div>
    </div>
    <div class="actions">
      <button class="btn primary">Save</button>
      <%= link_to 'Back', admin_projects_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
