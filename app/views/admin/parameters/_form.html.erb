<%= form_for([:admin, @project, @doc, @parameter]) do |f| %>
  <fieldset>
    <legend><%= link_to @project.cname + @project.version, admin_project_docs_path(@project) %> - <%= link_to @doc.name, admin_project_doc_path(@project, @doc) %> - <%= @title %></legend>
    <%= render 'shared/error_messages', :target => @parameter %>
    <div class="clearfix">
      <%= f.label :name %>
      <div class="input">
      <%= f.text_field :name %></div>
    </div>
    <div class="clearfix">
      <%= f.label :type %>
      <div class="input">
      <%= f.text_field :type %></div>
    </div>
    <div class="clearfix">
      <%= f.label :desc %>
      <div class="input">
      <%= f.text_field :desc, :class => "xxlarge", :style => "height:80px;" %></div>
    </div>
    <div class="clearfix">
      <%= f.label :required %>
      <div class="input">
        <%= f.check_box :required %>
      </div>
    </div>
    <div class="actions">
      <button class="btn primary">Save</button>
      <%= link_to 'Back', admin_project_doc_parameters_path(@project, @doc), :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
