<%= form_for([:admin, @user]) do |f| %>
  <fieldset>
    <legend><%= link_to @user.name, @user %> - <%= @title %></legend>
    <%= render 'shared/error_messages', :target => @user %>
    <div class="clearfix">
      <%= f.label :projects %>
      <div class="input">
      <%= f.text_field :projects %></div>
    </div>
    <div class="clearfix">
      <%= f.label :role %>
      <div class="input">
      <%= f.select :ability, User::ROLES.keys.collect { |s| [User::ROLES[s], s] } %></div>
    </div>
    <div class="actions">
      <button class="btn primary">Save</button>
      <%= link_to 'Back', admin_users_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
