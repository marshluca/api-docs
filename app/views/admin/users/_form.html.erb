<%= form_for([:admin, @user]) do |f| %>
  <fieldset>
    <legend><%= @title %></legend>
    <%= render 'shared/error_messages', :target => @user %>
    <div class="clearfix">
      <%= f.label :name %>
      <div class="input">
      <%= f.text_field :name %></div>
    </div>
    <div class="clearfix">
      <%= f.label :email %>
      <div class="input">
      <%= f.text_field :email %></div>
    </div>
    <div class="clearfix">
      <%= f.label :projects %>
      <div class="input">
      <%= f.text_field :projects %></div>
    </div>
    <div class="clearfix">
      <%= f.label :ability %>
      <div class="input">
      <%= f.select :ability, [0, 1, 2].collect { |s| [User::ROLES[s], s] } %></div>
    </div>
    <div class="actions">
      <button class="btn primary">Save</button> <%= link_to 'Back', admin_users_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>