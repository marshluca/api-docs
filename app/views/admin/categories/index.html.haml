%h3 #{link_to @project.cname + @project.version, admin_project_docs_path(@project)} - 分类管理
%br/

%table
  %tr
    %th 名称
    %th 描述
    %th

  - @categories.each do |category|
    %tr
      %td= category.name
      %td= category.desc
      %td #{link_to '接口管理', :controller => 'admin/docs', :action => 'category', :cate => category.name} | #{link_to '编辑', edit_admin_project_category_path(@project, category)} | #{link_to '删除', admin_project_category_path(@project, category), :confirm => '你确定要删除吗 ?', :method => :delete}

%br

= link_to '新增分类', new_admin_project_category_path(@project), :class => 'btn success'
